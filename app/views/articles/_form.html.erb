<%= form_for @article do |f| %>

    <% if @article.errors.any? %>
        <% @article.errors.full_messages do |message| %>
            <%= message %>
        <% end %>
    <% end %>

    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :file %>
      <%= f.file_field :logo %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>
